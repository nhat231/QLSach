@model QLSach.Models.Entities.NHANVIENS;
<form method="post" asp-controller="NhanVien" asp-action="Create">
    <div class="input-group mb-3" style="padding: 0 10px;text-align:center">
        @if (@TempData["Message"] != null)
        {
            <label style="color:red;">@TempData["Message"]</label>
        }
    </div>
    <div class="row pb-2">
        <h4 class="text-primary" style="font-size:18px">Thêm mới nhân viên</h4>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label>Mã nhân viên <span style="color:red">(*)</span></label>
            <input asp-for="MANV" class="form-control" type="text" />
        </div>
        <div class="form-group col-md-6">
            <label>Tên nhân viên <span style="color:red">(*)</span></label>
            <input asp-for="TENNV" class="form-control" type="text" />
        </div>
        <div class="form-group col-md-6">
            <label>Mật khẩu</label>
            <input asp-for="MATKHAU" class="form-control" type="password" />
        </div>
        <div class="form-group col-md-6">
            <label>Số điện thoại</label>
            <input asp-for="SDT" class="form-control" type="text" />
        </div>
    </div>
    <div style="margin-top:20px">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-controller="NhanVien" asp-action="Index" class="btn btn-secondary">
            Quay lại
        </a>
     </div>
    
</form>

